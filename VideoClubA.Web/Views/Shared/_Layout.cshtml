
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VideoClubA.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VideoClubA.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cyborg.css" />

</head>
<body>
   
        <div class="container">
            <div class="row">
                <div class="col">
                     <header>
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                      <div class="container-fluid">
                        <a class="navbar-brand" href="#">Video Club</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                          <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarColor01">
                          <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                              <a class="nav-link active" href="#">Home
                                <span class="visually-hidden">(current)</span>
                              </a>
                            </li>
                            <li class="nav-item">
                              <a class="nav-link" asp-area="Movies" asp-controller="Movie" asp-action="MovieGallery">Ταινίες</a>
                            </li>
                            <li class="nav-item">
                               <a  class="nav-link" asp-area="Customers" asp-controller="Customer" asp-action="CustomerPanel">Πελάτες</a>
                            </li>
                            <li class="nav-item">
                               <a class="nav-link" asp-area="ActiveReservations" asp-controller="ActiveReservation" asp-action="ActiveReservationsPanel">Ενεργές Κρατήσεις</a>

                            </li>
                          </ul>
                        </div>
                      </div>
                    </nav>
                   </header>
                    <main role="main" class="pb-3" style="background-color:black">
                        @RenderBody()
                    </main>
                 <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2023 - VideoClubA.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
                    <script src="~/lib/jquery/dist/jquery.min.js"></script>
                    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="~/js/site.js" asp-append-version="true"></script>
                    @await RenderSectionAsync("Scripts", required: false)
                </body>
                </div>
            </div>
        </div>


       


</html>
