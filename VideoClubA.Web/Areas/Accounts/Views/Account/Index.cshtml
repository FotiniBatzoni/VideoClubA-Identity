@using VideoClubA.Web.Areas.Accounts.Models
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border" style="padding:20px">
    <form action="@Url.Action("Login", "Account", new { area = "Accounts" })" method="post">
           @Html.AntiForgeryToken()
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row m-5">
            <div class="col-2">
                <label >UserName</label>
            </div>
            <div class="col-5">
                <input type="text"  name="UserName" value="@Model.UserName" class="form-control"/>
                    <span class="text-danger" asp-validation-for=@Model.UserName></span>
            </div>
        </div >
          <div class="form-group row m-5" >
            <div class="col-2">
                <label>Password</label>
            </div>
            <div class="col-5">
                <input type="password" name="Password" value="@Model.Password" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Password"></span>

            </div>

        </div>
        <div class="row form-check  d-flex justify-content-center">
            <div class="col-2">
                <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input">
                <label class="col-form-label" asp-for="@Model.RememberMe">Remember Me</label>
            </div>
         </div>

         <div class="form-group row m-5" >
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login">
            </div>
       
        </div >
    </form>
</div>